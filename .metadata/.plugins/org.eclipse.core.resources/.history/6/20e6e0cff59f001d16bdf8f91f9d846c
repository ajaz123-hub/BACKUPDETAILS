package ArrayPrograms;

import java.util.Arrays;

public class EvenOddArray {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// TODO Auto-generated method stub
int a[]= {1,3,4,6,5,9,7};
int temp=0;
int even=0;
int odd=a.length-1;
for(int i=0;i<a.length;i++)
{
	while(a[even]%2==0)
	{
		even++;
	}
	while(a[odd]%2!=0)
	{
		odd--;
	}
	if(even<odd)
	{
		temp=a[even];
		a[even]=a[odd];
		a[odd]=temp;
		
	}
	
}
System.out.println(Arrays.toString(a));
	}

}
